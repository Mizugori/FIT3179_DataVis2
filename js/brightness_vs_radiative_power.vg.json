{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "Radiative power of fires compared to brightness",
  "background": "#cfcccb",
  "data": {
    "url": "https://raw.githubusercontent.com/Mizugori/FIT3179_DataVis2/master/data/fire_archive_M6_96619.csv"
  },
  "layer": [
  {
    "mark": {
      "type": "point", 
      "color": "orange"
    },
    "transform": [{
      "calculate": "log(datum.frp)/LN10", 
      "as": "log_frp"
    }],
    "encoding": {
      "tooltip": [
        {"field": "brightness"},
        {"field": "frp"}
      ], 
      "y": {
        "field": "frp", 
        "type": "quantitative",
        "title": "Radiative power of fire (MW)"
      },
      "x": {
        "field": "brightness", 
        "type": "quantitative",
        "title": "Brightness temperature (K)"
      },
      "color": {
        "field": "log_frp",
        "scale":{"scheme": "oranges"},
        "type": "quantitative",
        "legend": null
      }
    }
  }
  ]
}