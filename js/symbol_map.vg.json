{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "Bushfires in Australia, 1st August 2019 to 30th September 2019",
  "projection": {"type":"mercator"},
  "background": "#cfcccb",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Mizugori/FIT3179_DataVis2/master/data/Australia.topo.json",
        "format": {"type": "json"}
      },
      "mark": {"type": "geoshape", "fill": "#997f79", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Mizugori/FIT3179_DataVis2/master/data/fire_archive_M6_96619.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "color": {
          "field": "brightness",
          "type": "quantitative",
          "scale": {"scheme": "darkred"}
        },
        "opacity": {
          "field": "confidence",
          "type": "quantitative"
        }
      }
    }
  ]
}