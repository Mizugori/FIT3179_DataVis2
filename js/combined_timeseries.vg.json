{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Mizugori/FIT3179_DataVis2/master/data/fire_archive_M6_96619.csv"
  },
  "background":"#cfcccb",
  "vconcat":[{
      "width": "container",
      "height": 200,
      "title": "Count of bushfires over time",
      "mark": {"type": "line", "tooltip": {"content": "data"}, "interpolate":"natural", "color":"darkorange"},
      "encoding": {
        "x": {
          "field":"acq_date", 
          "type": "temporal",
          "timeUnit": {"unit": "yearmonthdate"},
          "axis":{"format": "%d %b %Y"},
          "title": "Date"
          },
        "y": {"aggregate":"count", "field": "brightness", "title": "Number of fires"}
      }
    },
    {
      "title":"Radiative power over time",
      "width":"container",
      "height":200,
      "encoding": {
        "x": {
          "field": "acq_date",
          "timeUnit": "yearmonthdate",
          "axis":{"format":"%d %b %Y"}
        }
      },
      "layer": [
        {
          "mark": {"type": "errorband", "extent": "ci", "interpolate": "natural", "color": "darkorange"},
          "encoding": {
            "y": {
              "field": "frp",
              "type": "quantitative",
              "title": "Mean radiative power of fire (MW)"
            }
          }
        },
        {
          "mark": {"type":"line", "interpolate":"natural", "color":"darkorange"},
          "encoding": {
            "y": {
              "aggregate": "mean",
              "field": "frp"
            }
          }
        }
      ]
    }
  ]
}