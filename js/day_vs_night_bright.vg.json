{
  "width": 800,
  "height": 600,
  "title": "Day vs Night brightness",
  "mark": {"type": "line", "tooltip": {"content": "data"}},
  "encoding": {
    "x": {"field":"acq_date", 
          "type": "temporal",
          "timeUnit": {"unit": "yearmonthdate"},
          "axis":{"format": "%b/%d/%Y"},
          "title": "Date",
          "scale": {"domain": {"param": "time_brush"}}
    },
    "y": {"aggregate":"count", "field": "brightness", "title": "Count"},
    "color":{"field":"daynight"}
  }
}